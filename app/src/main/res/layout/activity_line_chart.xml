<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    tools:context=".LineChartActivity">

    <View
        android:id="@+id/view_div"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="-2dp"/>

    <ImageView
        android:id="@+id/iv_mon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_down"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_tue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"/>

    <ImageView
        android:id="@+id/iv_tue"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_down"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_wed"
        app:layout_constraintStart_toEndOf="@id/iv_mon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_wed"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_down"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_thu"
        app:layout_constraintStart_toEndOf="@id/iv_tue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_thu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_down"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_fri"
        app:layout_constraintStart_toEndOf="@id/iv_wed"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_fri"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_down"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_sat"
        app:layout_constraintStart_toEndOf="@id/iv_thu"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sat"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_down"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/iv_sun"
        app:layout_constraintStart_toEndOf="@id/iv_fri"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sun"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_down"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_sat"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>